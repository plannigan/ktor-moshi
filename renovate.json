{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "baseBranches": ["main", "renovate-testing"],
  "useBaseBranchConfig": "merge",

  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    "schedule:earlyMondays"
  ],

  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "github-actions",
    "pip_requirements",
    "gradle",
    "gradle-wrapper",
    "custom.regex"
  ],

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "README\\.md"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "badge\/kotlin-(?<currentValue>.+?)-blue\\s"
      ],
      "datasourceTemplate": "gradle",
      "depNameTemplate": "org.jetbrains.kotlin.jvm"
    }
  ],

  "packageRules": [
    {
      "groupName": "GitHub Upload/Download Artifacts",
      "matchPackageNames": [
        "actions/upload-artifact",
        "actions/download-artifact"
      ]
    }
  ]
}
